<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'users/template', {user: @user, book: @book} %>
		</div>
		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
						<tr>
							<td>
								<%= link_to user_path(book.user.id) do %>
									<%= attachment_image_tag book.user, :profile_image, format: 'jpeg', size: '50x50', fallback: "/images/no-image.jpg" %>
								<% end %>
							</td>
							<td><%= link_to book.title, book_path(book.id) %></td>
							<td><%= book.body %></td>
							<td>
							<% if Favorite.find_by(user_id: current_user.id, book_id: book.id) %>
								<%= link_to "/favorites/#{book.id}/destroy", method: :post do %>
									<span class="glyphicon glyphicon-heart" aria-hidden="true"></span> <%= book.favorites.count %>
								<% end%>
							<% else %>
								<%= link_to "/favorites/#{book.id}/create", method: :post do %>
									<span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span> <%= book.favorites.count %>
								<% end %>
							<% end %>
							</td>
							<td>コメント数</td>

						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
